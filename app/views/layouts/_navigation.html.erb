<header class="navbar navbar-fixed-top navbar-default">
  <div class="container">
    <%= link_to root_path, class: 'navbar-brand', id: "logo" do %>
      My <span id="logo-veg">Veg</span> Recipes
    <% end %>
    
    <% if logged_in? %>
      
      <ul class="nav_item">
        <li class="dropdown">
          <%= link_to '#', class: "btn btn-default btn-success dropdown-toggle", "data-toggle" => "dropdown" do %>
            <%= current_user.chefname %> <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to "View Profile", chef_path(current_user) %></li>
            <li><%= link_to "Edit Profile", edit_chef_path(current_user) %></li>
            <li class="divider"></li>
            <li><%= link_to "Logout", logout_path %></li>
          </ul>
        </li>
      </ul>
    
    <% else %>
      
      <div class="nav_item">
        <%= link_to "Login", login_path, class: "btn btn-default btn-success" %>
      </div>
      
    <% end %>
    
    
  </div>
</header>