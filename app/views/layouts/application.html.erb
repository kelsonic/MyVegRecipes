      <% end %>
      <div class="nav_item">
        <%= link_to "link 1", "", class: "btn btn-default btn-success" %>
      </div>
      <div class="nav_item">
        <%= link_to "link 2", "", class: "btn btn-default btn-success" %>
      </div>
      <div class="nav_item">
        <%= link_to "link 3", "", class: "btn btn-default btn-success" %>
      </div>
    </div>
  </header>
  
  <div class="container">
    <%= yield %>
    <div class="footer text-center">
      <p>&copy; My Recipes 2016. All Rights Reserved.</p>
    </div>
    
  </div>


</body>
</html>
