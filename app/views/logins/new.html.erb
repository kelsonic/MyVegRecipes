<%= render 'shared/page_title', title: 'Login' %>

<div class="row">
  <div class="well col-md-4 col-md-offset-4 text-center">  
    <%= form_tag '/login' do %>
      
      <%= label_tag :email %>
      <%= text_field_tag :email %>
      
      <%= label_tag :password %>
      <%= password_field_tag :password %>
      
      <%= submit_tag 'Login', class: 'btn btn-success' %>
      
    <% end %>
    <br/>
    <p class="text-center">Not signed up? <%= link_to 'Register', register_path %> now.</p>
  </div>
</div>