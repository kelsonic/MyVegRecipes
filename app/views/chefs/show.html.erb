<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
    <%= gravatar_for @chef, size: 200 %>
    <h1>Chef <%= @chef.chefname %></h1>
  </div>
</div>

<hr/>

<div class="col-md-10 col-md-offset-1 jumbotron text-center title-chef-show">
  <h3>My Recipes</h3>
  <%= will_paginate @recipes %>
</div>

<% @recipes.each do |recipe| %>
  <div class="row">
    
    <% if recipe.picture? %>
      
      <div class="col-md-3 col-md-offset-2">
        <%= image_tag(recipe.picture.url, class: "recipe-index-img") %>
      </div>
      <div class="col-lg-4 well">
        <h3><%= link_to recipe.name, recipe_path(recipe) %></h3>
        <p><%= recipe.summary %></p>
        <p>
          <span class="quiet">
            <small>Created <%= time_ago_in_words(recipe.created_at) %> ago</small>
          </span><br/>
          <span class="quiet">
            <small>Updated <%= time_ago_in_words(recipe.updated_at) %> ago</small>
          </span>
        </p>
        
        <div class="pull-right">
          <%= link_to like_recipe_path(recipe, like: true), method: :post do %>
            <i class="glyphicon glyphicon-thumbs-up"></i> &nbsp; <%= recipe.thumbs_up_total %>
          <% end %> &nbsp;&nbsp;&nbsp;&nbsp;
          <%= link_to like_recipe_path(recipe, like: false), method: :post do %>
            <i class="glyphicon glyphicon-thumbs-down"></i> &nbsp; <%= recipe.thumbs_down_total %>
          <% end %>
        </div>
      </div>
      
    <% else %>
    
      <div class="col-lg-4 col-lg-offset-4 well">
        <h3><%= link_to recipe.name, recipe_path(recipe) %></h3>
        <p><%= recipe.summary %></p>
        <p>
          <span class="quiet">
            <small>Created <%= time_ago_in_words(recipe.created_at) %> ago</small>
          </span><br/>
          <span class="quiet">
            <small>Updated <%= time_ago_in_words(recipe.updated_at) %> ago</small>
          </span>
        </p>
        
        <div class="pull-right">
          <%= link_to like_recipe_path(recipe, like: true), method: :post do %>
            <i class="glyphicon glyphicon-thumbs-up"></i> &nbsp; <%= recipe.thumbs_up_total %>
          <% end %> &nbsp;&nbsp;&nbsp;&nbsp;
          <%= link_to like_recipe_path(recipe, like: false), method: :post do %>
            <i class="glyphicon glyphicon-thumbs-down"></i> &nbsp; <%= recipe.thumbs_down_total %>
          <% end %>
        </div>
      </div>
      
    <% end %>
  </div>
<% end %>